QMAKE_LFLAGS		= -headerpad_max_install_names
QMAKE_LFLAGS_RELEASE	=
QMAKE_LFLAGS_DEBUG	=
QMAKE_LFLAGS_SHLIB	= -prebind -qmkshrobj
QMAKE_LFLAGS_PLUGIN	= -bundle
QMAKE_LFLAGS_SONAME	=
